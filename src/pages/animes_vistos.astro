---
import Layout from "@/layouts/Layout.astro";
import AnimeList from "@/components/anime/AnimeList.vue";
---

<Layout title="Animes Vistos" bg_color="">
  <div class="absolute top-6 right-5 z-10 hidden md:block">
    <a
      href="https://tiermaker.com/create/animes-random-saikomic-16203118"
      target="_blank"
      class="flex items-center flex-col gap-1.5 rounded-lg bg-zinc-800/80 px-3 py-1.5 text-xs font-medium text-rose-300/80 uppercase backdrop-blur-sm duration-200 hover:bg-rose-700/50 border hover:border-rose-500 border-rose-300/20 hover:text-white shadow-lg hover:shadow-rose-500/50 transition-all "
    >
    <div class="flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-3.5 w-3.5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
          ></path>
        </svg>
        TierMaker 

      </div>
      <span class="hidden md:inline text-xs">by Stefy</span>
    </a>
  </div>
  <button
    id="scroll-to-top"
    class="fixed right-8 bottom-8 z-50 translate-y-20 transform rounded-full bg-zinc-800/80 p-3 text-rose-300/80 opacity-0 shadow-lg backdrop-blur-sm transition-all duration-300 hover:bg-zinc-700/80"
    aria-label="Volver arriba"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
  </button>

  <!-- <AnimeList client:load /> -->
</Layout>

<script>
  // Redirect to Google when the page loads
  window.location.href = 'https://www.saiko-ruleta.vercel.app';
</script>

